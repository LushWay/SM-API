{
  "name": "sm-api",
  "version": "0.16.28",
  "license": "MIT",
  "scripts": {
    "lint": "eslint ./scripts/ --fix",
    "postinstall": "node tools/patch-modules.js",
    "patch-modules": "node tools/patch-modules.js"
  },
  "dependencies": {
    "@minecraft/server": "1.7.0-beta.1.20.40-stable",
    "@minecraft/server-admin": "1.0.0-beta.1.20.40-stable",
    "@minecraft/server-gametest": "1.0.0-beta.1.20.40-stable",
    "@minecraft/server-net": "1.0.0-beta.1.20.40-stable",
    "@minecraft/server-ui": "1.2.0-beta.1.20.40-stable",
    "@minecraft/vanilla-data": "1.20.40"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-scriptapi": "file:tools/eslint-plugin",
    "leafy-utils": "^5.3.1",
    "typescript": "^5.2.2"
  },
  "resolutions": {
    "@minecraft/server-net/@minecraft/server-admin": "1.0.0-beta.1.20.40-stable"
  },
  "private": true,
  "type": "module",
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "semi": false,
    "endOfLine": "crlf",
    "quoteProps": "consistent"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "scriptapi"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "no-empty": "off",
      "no-console": "off",
      "no-undef": "off",
      "prefer-const": "warn",
      "scriptapi/ensure-modules": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-types": "warn",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/naming-convention": [
        "warn",
        {
          "selector": "default",
          "format": [
            "camelCase"
          ],
          "leadingUnderscore": "allow",
          "trailingUnderscore": "allow"
        },
        {
          "selector": [
            "objectLiteralMethod",
            "objectLiteralProperty"
          ],
          "format": null,
          "leadingUnderscore": "allow",
          "trailingUnderscore": "allow"
        },
        {
          "selector": "function",
          "format": [
            "camelCase",
            "PascalCase"
          ],
          "leadingUnderscore": "allow",
          "trailingUnderscore": "allow"
        },
        {
          "selector": "variable",
          "format": [
            "camelCase",
            "PascalCase",
            "UPPER_CASE"
          ],
          "leadingUnderscore": "allow",
          "trailingUnderscore": "allow"
        },
        {
          "selector": "variable",
          "modifiers": [
            "exported",
            "const"
          ],
          "format": [
            "UPPER_CASE"
          ],
          "leadingUnderscore": "allow",
          "trailingUnderscore": "allow"
        },
        {
          "selector": "typeLike",
          "format": [
            "PascalCase"
          ]
        }
      ]
    },
    "root": true
  },
  "workspaces": {
    "packages": [
      "tools/eslint-plugin"
    ]
  }
}
